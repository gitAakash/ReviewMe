@using ReviewMe.Common.Extensions
@using ReviewMe.ViewModel
@using ReviewMe.Web.Controllers
@model ReviewMe.ViewModel.UserViewModelLong
@{
    Layout = null;
    bool isodd = false;
}

<div class="table-primary">
    <div role="grid" id="jq-datatables-example_wrapper" class="dataTables_wrapper form-inline no-footer">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered dataTable no-footer" id="jq-datatables-example" aria-describedby="jq-datatables-example_info">
            <thead>
                <tr role="row">
                    <th class="sorting_asc" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" aria-label="Name: activate to sort column ascending" style="width: 179px;" aria-sort="ascending">Name</th>
                    <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" aria-label="Address: activate to sort column ascending" style="width: 265px;">Address</th>
                    <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" aria-label="Date of Birth: activate to sort column ascending" style="width: 241px;">Date of Birth</th>
                    <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" aria-label="Email: activate to sort column ascending" style="width: 150px;">Email</th>
                    <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" aria-label="Contact Number: activate to sort column ascending" style="width: 105px;">Contact Number</th>
                    <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" aria-label="Role: activate to sort column ascending" style="width: 105px;">Role</th>
                    <th class="sorting" tabindex="0" aria-controls="jq-datatables-example" rowspan="1" colspan="1" aria-label="Action: activate to sort column ascending" style="width: 105px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserViewModel item in Model.UserViewModelList)
                {
                    if (isodd)
                    {
                        @Html.Raw("<tr class='gradeA odd'>")
                        isodd = false;
                    }
                    else
                    {
                        @Html.Raw("<tr class='gradeA even'>")
                        isodd = true;
                    }
                <td class="sorting_1">@item.FName @item.LName</td>
                    <td> @item.Address        </td>
                    <td>@String.Format("{0:d}", item.Dob)</td>
                    <td>@item.EmailId</td>
                    <td>@item.MobileNo</td>
                    <td>@item.RoleName </td>
                    <td>
                        <a href="javascript:void(0)" id="@(item.Id)" class=" fa fa-edit fa-lg" title="Edit" onclick=" EditUser(this)" style="margin: 4px 0px 0px 0px;">

                        </a>

                        <a href="javascript:void(0)" class="fa fa-trash-o fa-lg" id="@(item.Id)_@(item.FName)" title="Delete" onclick=" DeleteUser(this)" style="margin: 4px 0px 0px 0px;">

                        </a>

                    </td>
                    @Html.Raw("</tr>")
                }             
                </tbody>
            </table>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#jq-datatables-example').dataTable();
        });
    </script>
