@model ReviewMe.ViewModel.ProjectViewModel
<div class="panel-heading">
    <span class="panel-title">Create Project</span>
</div>
@Scripts.Render("~/bundles/jqueryval")
<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("AddEditProject", "Project", FormMethod.Post, new { @class = "form-inline" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <div class="panel-body">
                <form class="form-inline">
                    <div class="form-group">
                        <label class="sr-only">Project Name</label>
                        @Html.TextBoxFor(model => model.ProjectTitle, new { @placeholder = "Enter Project", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ProjectTitle)
                        @Html.TextBoxFor(model => model.Description, new { @placeholder = "Enter Description", @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary btn-labeled"><span class="btn-label icon fa fa-plus"></span> Add</button>
                </form>
            </div>
        }
    </div>
</div>
