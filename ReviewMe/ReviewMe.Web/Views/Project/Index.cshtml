@model ReviewMe.ViewModel.ProjectViewModelLong
@using ReviewMe.Common.Extensions
@using ReviewMe.ViewModel 
@using ReviewMe.Web.Controllers
@{
    ViewBag.Title = "Project-Management";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/Custom/Project.js"></script>
<ul class="breadcrumb breadcrumb-page">
    <div class="breadcrumb-label text-light-gray">You are here: </div>
    <li><a href="@(Url.ActionLink<HomeController>(controller => controller.Index()))">Home</a></li>
    <li class="active"><a href="#">Project</a></li>
</ul>
<div class="page-header">

    <div class="row">
        <!-- Page header, center on small screens -->
        <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="menu-icon fa fa-tasks"></i>&nbsp;&nbsp;Project Management</h1>

        <div class="col-xs-12 col-sm-8">
            <div class="row">
                <hr class="visible-xs no-grid-gutter-h">
                <!-- "Create project" button, width=auto on desktops -->
               

                <!-- Margin -->
                <div class="visible-xs clearfix form-group-margin"></div>
                <script type="text/javascript">
                    $(document).ready(function () {

                        debugger;

                        $("#strSearch").keypress(function (event) {
                            debugger;
                            if (event.keyCode == 13) {
                            var strSearch = $('#strSearch').val();
                            if (strSearch == "") {
                                location.reload();
                            }
                            else
                                debugger;
                            $.ajax({
                                url: "/Project/SearchProject",
                                type: "GET",
                                data: { 'strSearch': strSearch },
                                success: function (data) {
                                    debugger;
                                    $('#lstuser').html(data);
                                    $('#strSearch').val("");

                                },
                                error: function (response) {
                                    debugger;

                                }

                            });
                            return false;
                            }
                        });
                                            
                    });

                </script>

                <!-- Search field -->
                <form action="" class="pull-right col-xs-12 col-sm-6">
                    <div class="input-group no-margin">
                        <span class="input-group-addon" style="background: #fff; background: rgba(0, 0, 0, .05); border: none;"><i class="fa fa-search"></i></span>
                        <input type="text" id="strSearch"  placeholder="Search..." class="form-control no-padding-hr" style="background: #fff; background: rgba(0, 0, 0, .05); border: none;">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 
<div class="row">
    @Html.Partial("AddEditProject", Model.ProjectViewModel)
    
</div>
<div id="lstuser">
    @Html.Partial("SearchProject", Model)
</div>




