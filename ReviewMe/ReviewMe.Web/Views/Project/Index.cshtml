@model ReviewMe.ViewModel.ProjectViewModelLong
@using ReviewMe.Common.Extensions
@using ReviewMe.ViewModel 
@using ReviewMe.Web.Controllers
@{
    ViewBag.Title = "Project-Management";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/Custom/Project.js"></script>
<ul class="breadcrumb breadcrumb-page">
    <div class="breadcrumb-label text-light-gray">You are here: </div>
    <li><a href="@(Url.ActionLink<HomeController>(controller => controller.Index()))">Home</a></li>
    <li class="active"><a href="#">Project</a></li>
</ul>
<div class="page-header">

    <div class="row">
        <!-- Page header, center on small screens -->
        <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="menu-icon fa fa-tasks"></i>&nbsp;&nbsp;Project Management</h1>

        <div class="col-xs-12 col-sm-8">
            <div class="row">
                <hr class="visible-xs no-grid-gutter-h">
                <!-- "Create project" button, width=auto on desktops -->
               

                <!-- Margin -->
                <div class="visible-xs clearfix form-group-margin"></div>

                <!-- Search field -->
                <form action="" class="pull-right col-xs-12 col-sm-6">
                    <div class="input-group no-margin">
                        <span class="input-group-addon" style="background: #fff; background: rgba(0, 0, 0, .05); border: none;"><i class="fa fa-search"></i></span>
                        <input type="text" placeholder="Search..." class="form-control no-padding-hr" style="background: #fff; background: rgba(0, 0, 0, .05); border: none;">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 
<div class="row">
    @Html.Partial("AddEditProject", Model.ProjectViewModel)
    <div class="col-sm-12">
        <div class="panel">
            <div class="panel-heading">
                <span class="panel-title">Project</span>
            </div>
            <div class="panel-body ">
                <div class="table-info">
                    <div class="table-header">
                        <div class="table-caption">
                            Project Table
                        </div>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Project Title</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ProjectViewModel item in Model.ProjectViewModelList)
                            {
                                <tr>
                                    <td>@item.ProjectTitle</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a href="@Url.Action("Index", "Project", new { id = item.Id })" class="btn btn-primary btn-labeled ">
                                            <span class="btn-label icon fa fa-edit"></span> Edit
                                        </a>

                                        <a href="javascript:void(0)" class="btn btn-danger btn-labeled " id="@(item.Id)_@(item.ProjectTitle)" onclick=" DeleteProject(this) ">
                                            <span class=" btn-label icon fa fa-warning">
                                            </span> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    $(document).ready(function () {


        if ('@ViewBag.ineditmode' == "True") {
            $("#btnaction").addClass('btn-label icon fa fa-edit');
            $("#btnaction").text("Update");
        }

        else {
            $("#btnaction").addClass('btn-label icon fa fa-plus');
            $("#btnaction").text("Add");
        }

    });
</script>


