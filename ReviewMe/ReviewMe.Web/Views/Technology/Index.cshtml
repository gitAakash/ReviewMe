@using ReviewMe.Common.Extensions
@using ReviewMe.ViewModel
@using ReviewMe.Web.Controllers
@model ReviewMe.ViewModel.TechnologyViewModelLong
@{
    ViewBag.Title = "Technology-Management";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/Custom/Technology.js"></script>

<ul class="breadcrumb breadcrumb-page">
    <div class="breadcrumb-label text-light-gray">You are here: </div>
    <li><a href="@(Url.ActionLink<HomeController>(controller => controller.Index()))">Home</a></li>
    <li class="active"><a href="#">Technology</a></li>
</ul>
<div class="page-header">

    <div class="row">
        <!-- Page header, center on small screens -->
        <h1 class="col-xs-12 col-sm-4 text-center text-left-sm"><i class="menu-icon fa fa-flask"></i>&nbsp;&nbsp;Technology Management</h1>

        <div class="col-xs-12 col-sm-8">
            <div class="row">
                <hr class="visible-xs no-grid-gutter-h">
                <!-- "Create project" button, width=auto on desktops -->
                <!-- Margin -->
                <div class="visible-xs clearfix form-group-margin"></div>

                <!-- Search field -->
                <form action="" class="pull-right col-xs-12 col-sm-6">
                    <div class="input-group no-margin">
                        <span class="input-group-addon" style="background: #fff; background: rgba(0, 0, 0, .05); border: none;"><i class="fa fa-search"></i></span>
                        <input type="text" placeholder="Search..." class="form-control no-padding-hr" style="background: #fff; background: rgba(0, 0, 0, .05); border: none;">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 
    
    <div class="row">
        @Html.Partial("AddEditTechnology", Model.TechnologyViewModel)
        <div class="col-sm-12">
            <div class="panel">
                <div class="panel-heading">
                    <span class="panel-title">Technology</span>
                </div>
                <div class="panel-body ">
                    <div class="table-info">
                        <div class="table-header">
                            <div class="table-caption">
                                Technology Table
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Technology Name</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (TechnologyViewModel item in Model.TechnologyViewModelList)
                                {
                                    <tr>
                                        <td>@item.TechnologyName</td>
                                        <td>@item.TechnologyName</td>
                                        <td>
                                            <a href="@Url.Action("Index", "Technology", new { id = item.Id })" class="btn btn-primary btn-labeled ">
                                                <span class="btn-label icon fa fa-edit"></span> Edit
                                            </a>

                                            <a href="javascript:void(0)" class="btn btn-danger btn-labeled " id="@(item.Id)_@(item.TechnologyName)" onclick=" DeleteTechnology(this) ">
                                                <span class=" btn-label icon fa fa-warning">
                                                </span> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



