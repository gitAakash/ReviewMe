@using ReviewMe.ViewModel;
@using ReviewMe.Common.Extensions;
@model ReviewMe.ViewModel.ReviewDetailsViewModel
@{
    Layout = null;
}
@*@Scripts.Render("~/bundles/jqueryval")*@

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
     <h4 class="modal-title">Review Details</h4>
</div>

@Html.Hidden("hdnRevieweeDate", (String)ViewBag.RevieweeDate)
<div class="modal-body">
    <div class=" ">

        <div class="row">
            <div class="col-sm-10">
                <div class="form-group no-margin-hr">
                    <label class="control-label">Reviewer Name</label>
                    @Html.TextBoxFor(m => m.ReviewerName, new { @class = "form-control", @readonly = true })
                </div>
            </div><!-- col-sm-6 -->
        </div>

        <div class="row">
            <div class="col-sm-10">
                <div class="form-group no-margin-hr">
                    <label class="control-label">Title</label>
                    @Html.TextAreaFor(m => m.Title, new { @class = "form-control", @readonly = true })
                </div>
            </div><!-- col-sm-6 -->
        </div>

        <div class="row">
            <div class="col-sm-10">
                <div class="form-group no-margin-hr">
                    <label class="control-label">Comment</label>
                    @Html.TextBoxFor(m => m.Comment, new { @class = "form-control", @readonly = true })

                </div>
            </div><!-- col-sm-6 -->
        </div>

        <div class="row">
            <div class="col-sm-10">
                <div class="form-group no-margin-hr">
                    <label class="control-label">Review Date</label>
                    @Html.TextBoxFor(m => m.ReviewDateString, new { @class = "form-control", @readonly = true })

                </div>
            </div><!-- col-sm-6 -->
        </div>

        <div class="modal-footer">

            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>


